<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/first_number_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:hint="@string/enter_first_number"
        android:inputType="numberDecimal"
        android:maxLength="15"
        android:importantForAutofill="no" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/plus"
        android:textSize="50sp"/>

    <EditText
        android:id="@+id/second_number_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:hint="@string/enter_second_number"
        android:inputType="numberDecimal"
        android:maxLength="15"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/start_service_textV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:text="@string/start_service"
        android:textSize="40sp"/>

    <fragment
        android:id="@+id/fragment"
        android:name="com.a1androidhmw.Fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>